{
  "rules": {
    ".read": true,
    ".write": true,
    
    "posts": {
      ".read": true,
      ".write": true,
      "$postId": {
        "likes": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "comments": {
          "$commentId": {
            ".validate": "newData.hasChildren(['username', 'text', 'timestamp'])"
          }
        },
        "likedBy": {
          "$userId": {
            ".validate": "newData.hasChildren(['timestamp', 'userId'])"
          }
        }
      }
    },
    
    "users": {
      ".read": true,
      ".write": true,
      "$userId": {
        ".validate": "newData.hasChildren(['username', 'displayName', 'email', 'createdAt'])"
      }
    },
    
    "birthdayMessages": {
      ".read": true,
      ".write": true,
      "$messageId": {
        ".validate": "newData.hasChildren(['text', 'username', 'timestamp'])"
      }
    },
    
    "userActivity": {
      "$userId": {
        ".read": "$userId === auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() === true",
        ".write": "$userId === auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() === true"
      }
    },
    
    "analytics": {
      ".read": "root.child('users').child(auth.uid).child('isAdmin').val() === true",
      ".write": true
    }
  }
}
